.container .title-content{
    width: 93%;
    border-radius: 20rpx;
    background-color: #fff;
    margin-bottom: 20rpx;
    margin: 10rpx auto;
    padding: 10rpx 0rpx;
}
.container .title-content.active{
    /* width: 99%; */
    /* background-color: #8564f0; */
    background-color: #2cb5df;
    border-radius: 25rpx;
    color: white;
    transform: scale(1.07);
}
.container .title-content.active .left{
    background-color: #fe9c45;
}
.container .title-content.active .content{
    color: white;
}
.container .title{
    display: flex;
    width: 60%;
    margin-left: 20rpx;
    padding-top: 10rpx;
}
.container .title .left{
    width: 17rpx;
    height: 40rpx;
    background-color: #2cb5df;
    border-radius: 10rpx;
}
.container .title .right{
    margin-left:15rpx;
    font-size: 29rpx;
    font-weight: 600;
}
.container .content{
    font-size: 26rpx;
    color: #222;
    margin-left:50rpx;
    /* margin-top: 25rpx; */
    margin-right: 10rpx;
    padding-bottom: 10rpx;
    line-height: 35rpx;
}