/* 起止时间 */
.h-date text{
  color: #ced6e0;
  margin-bottom: 15rpx;
  margin-left: 15rpx;
}
.h-date .start-date{
  margin-right: 30rpx;
}


/* 配置设施 */
.facility{
    width: 95%;
    margin-left: 25rpx;
    margin-bottom: 15rpx;
    margin-top: 15rpx;
}
.facility .title{
    color: #ced6e0;
    margin-bottom: 15rpx;
}
.facility .list{
    width: 95%;
    display: flex;
    flex-wrap: wrap;
    font-size: 24rpx;
}
.facility .list .item{
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
    padding: 0rpx 16rpx;
    height: 48rpx;
    background-color: rgba(228, 228, 228, 0.548);
    margin-left: 20rpx;
    line-height: 48rpx;
    margin-top: 15rpx;
}
.facility .list .active{
    background-color: #41ebad;
}
.btn-area button{
  background-color: #47adbd;
}
