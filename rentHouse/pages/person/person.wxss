/* pages/person/person.wxss */

page{
    background-color: #f3f3f3;
    margin: 0;
    padding: 0;
}

/* 获取用户信息 */
.user-info{
    width: 100%;
    height: 200rpx;
    background-color: #fff;
    margin: 0 auto;
    margin-top: 15px;
    display: flex; 
}
.user-info .avatar{
    width: 100rpx;
    height: 100rpx;
    margin-left: 45rpx;   
    margin-top: 25rpx;
    border-radius: 50%;
    overflow: hidden;
}
.user-info .avatar image{
    width: 100rpx;
    height: 100rpx;
}
.user-info .user-name{
    margin-top: 50rpx;
    margin-left: 25rpx;
    font-size: 32rpx;
}
.get-user-info{
    padding: 0;
    border: 0;
}
.get-user-info image{
    margin-left: -23rpx;
}
.user-info .tag{
    border: 1px solid #a2e4f0;
    height: 35rpx;
    padding: 5rpx 10rpx;
    margin-left: 15rpx;
    margin-top: 50rpx;
    font-size: 24rpx;
    background-color: #87ccd8;
    color: #fff;
    border-radius: 15rpx;
    line-height: 33rpx;
    text-align: center;
}
/* 切换按钮 */
.convert-btn{
    display: inline-block;
    width: 280rpx !important;
    font-size: 32rpx;
    padding: 10rpx;
    background-color: #41adbd;
    color: #fff;
    border-radius: 9rpx;
    font-weight: 400;
    text-align: center;
    margin: 30rpx 200rpx !important;
}

/* tab选项 出租 未出租 */
.wrapper{
    width: 710rpx;
    padding: 20rpx;
    background-color: #fff;
    display: flex;
    justify-content: space-around;
    text-align: center;
}

.type{
    font-size: 40rpx;
    color: #888;
    margin-right: 50px;
}